# Anthropic API Key - Required
ANTHROPIC_API_KEY=your_api_key_here

# WebSocket port (Railway uses PORT)
WS_PORT=8080

# Analysis interval (ms) - how often to analyze
ANALYSIS_INTERVAL=30000

# Discovery scan interval (ms) - how often to scan DexScreener
DISCOVERY_INTERVAL=120000

# Token Contract Address (pump.fun)
CONTRACT_ADDRESS=5X61PKDGt6Fjg6hRxyFiaN61CDToHEeE2gJhDgL9pump

# Creator/Dev Wallet Address
# Used to track treasury balance
CREATOR_WALLET=FPrWHsHS2SVqSpCZrsdqfiND2un8d4rQN1tNQJ8febNs

# ============================================
# TRADING CONFIGURATION (Optional)
# ============================================

# Enable real trading (default: false)
# Set to 'true' to allow Claude to execute actual trades
TRADING_ENABLED=false

# Solana Network - 'mainnet' (default) or 'devnet'
SOLANA_NETWORK=mainnet

# Helius RPC API Key (Recommended for production)
# Get from: https://helius.dev - Free tier: 500k requests/day
# If set, overrides SOLANA_RPC_URL
HELIUS_API_KEY=

# Fallback Solana RPC URL (if no Helius key)
# Public RPC is rate limited - use private RPC for trading
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Trading wallet private key (base58 encoded)
# ⚠️ NEVER COMMIT THIS! Only set in production env.
# Generate with: solana-keygen new --no-passphrase
SOLANA_PRIVATE_KEY=

# Jupiter API Key (optional, lite-api used by default)
# Get from: https://station.jup.ag/
JUPITER_API_KEY=

# Pause agent without stopping service
AGENT_ENABLED=true

# Enable memory/learning system
MEMORY_ENABLED=true

# ============================================
# RESEARCH TOOLS (Optional)
# ============================================

# Firecrawl API key for web search/scraping
# Get from: https://firecrawl.dev
FIRECRAWL_API_KEY=
